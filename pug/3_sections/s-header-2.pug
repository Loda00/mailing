mixin s-header-2(name, detail)
    table.e-table(cellpadding='0', cellspacing='0', width='100%', border='0')
        tbody
            tr
                td.e-table__td.s-header-2(align="center")
                    table.e-table(cellpadding='0', cellspacing='0', width='100%', border='0')
                        tbody
                            tr
                                td.s-header-2__text-td(align="left")
                                    p.s-header-2__name
                                        strong  !{name}
                                        br
                                        strong  !{detail}
                                td.s-header-2__logo-td(align="right")
                                    img.s-header-2__logo(src!=`${config.assets_url}/logo-integra.png`)
                    block
